<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChangePhoneActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarChangePhone"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:title="@string/titleDoiSoDienThoai"/>
        <EditText
            android:id="@+id/edtChangePhone"
            android:inputType="number"
            android:hint="Nhập số điện thoại"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/txtErrorPhone"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="10dp"
        android:id="@+id/btnChangePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnThayDoi"/>
</LinearLayout>